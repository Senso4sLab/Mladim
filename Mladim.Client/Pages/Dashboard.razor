@page "/"
@using Mladim.Client.ViewModels.Activity;

@attribute [Authorize]
<PageTitle>Poročila</PageTitle>

<MudStack Class="py-5" Spacing="4">
   
    <MudText Typo="Typo.h2" Color="Color.Tertiary"> @(SelectedOrganization?.Name)</MudText>

    @if (SelectedOrganization != null)
    {
        <MudTabs Class="py-3" Elevation="0" Style="font-size:1rem; font-weight:400; line-height:1.3;">

            @if (IsOrganizationStatisticsVisible)
            {
                <MudTabPanel Text="Statistika">
                    <OrganizationStatisticsTab></OrganizationStatisticsTab>
                </MudTabPanel>
            }
            
            @if (hasActiveProjects)
            {
                <MudTabPanel Text="Aktivni projekti">
                    <ProjectStatisticsTab PastActivities=false></ProjectStatisticsTab>
                </MudTabPanel> 
            }

            @if (hasPastProjects)
            {
                <MudTabPanel Text="Pretekli projekti">
                    <ProjectStatisticsTab PastActivities=true></ProjectStatisticsTab>
                </MudTabPanel>
            }
        </MudTabs>
    }   
</MudStack>





