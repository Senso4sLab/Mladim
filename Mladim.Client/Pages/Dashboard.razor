@page "/"
@using Mladim.Client.ViewModels.Activity;

@attribute [Authorize]
<PageTitle>Poročila</PageTitle>

<MudStack Class="py-5" Spacing="4">
   <MudTextField Value="@SelectedOrganization?.Attributes?.Name" Label="Izbrana organizacija" Variant="Variant.Outlined" ReadOnly="true"></MudTextField> 


    @if (SelectedOrganization != null)
    {
        <MudTabs  Class="py-3" Elevation="0" >
            <MudTabPanel Text="Statistika">
                <OrganizationStatisticsTab></OrganizationStatisticsTab>
            </MudTabPanel>
            @if (activeProjects.Any())
            {
                <MudTabPanel Text="Aktivni projekti">
                    <ProjectStatisticsTab PastActivities=false Projects="activeProjects"></ProjectStatisticsTab>
                </MudTabPanel> 
            }

            @if (pastProjects.Any())
            {
                <MudTabPanel Text="Končani projekti">
                    <ProjectStatisticsTab PastActivities=true Projects="pastProjects"></ProjectStatisticsTab>
                </MudTabPanel>
            }
        </MudTabs>
    }   
</MudStack>





