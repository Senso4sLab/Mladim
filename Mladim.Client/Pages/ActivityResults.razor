@using Mladim.Client.ViewModels.Survey;
@using Mladim.Domain.Enums;
@using Mladim.Domain.Extensions;
@using Mladim.Client.Components.Anketa;
@using Mladim.Client.Components.ActivitiesResults;


<MudStack Class="pb-5">  
    <MudStack Row Justify="Justify.FlexEnd">
        <MudIconButton OnClick="OnTablePresentation" Icon="@Icons.Material.Filled.TableRows" Color="isTableMode ? Color.Primary : Color.Tertiary"></MudIconButton>
        <MudIconButton OnClick="OnChartPresentation" Icon="@Icons.Material.Filled.InsertChart" Color="isTableMode ? Color.Tertiary : Color.Primary"></MudIconButton>
    </MudStack>
       
   @if(isTableMode)
    {
        <ActivityResultTable SurveyResponsesGroupByQuestions="SurveyResponsesGroupByQuestions"></ActivityResultTable>
    }
    else
    {
        <ActivityResultChart SurveyResponsesGroupByQuestions="SurveyResponsesGroupByQuestions"></ActivityResultChart>
    }    
</MudStack>


