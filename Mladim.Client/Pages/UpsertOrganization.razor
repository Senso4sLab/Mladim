@page "/organization/{UserId}"
@page "/organization/{OrgId:int}"
@attribute [Authorize]

<PageTitle>Organizacija</PageTitle>

<MudStack Row Class="pt-8 pb-5" Justify="Justify.SpaceBetween">
     <MudText Typo="Typo.h2" Color="Color.Tertiary">Podatki o organizaciji</MudText>
     <MudButtonGroup Color="Color.Primary" Variant="Variant.Outlined">
         <MudIconButton Icon="@Icons.Material.Filled.Save" OnClick="UpsertOrganizationAsync" />
         <MudIconButton Icon="@Icons.Material.Filled.Cancel" OnClick="GoBack" Color="Color.Secondary" />
     </MudButtonGroup>
 </MudStack>
@if (Organization != null)
{
    <MudTextField @bind-Value="@Organization.Attributes.Name" Label="Ime organizacije" Variant="Variant.Outlined" Margin="Margin.Normal"/>
    <OrganizationTab @ref="orgDetailsTab" Organization="Organization" ReadOnly="false" />
}

