@using MudBlazor.Utilities;
@inherits LayoutComponentBase

<MudThemeProvider Theme="MyCustomTheme" />
<MudDialogProvider/>
<MudSnackbarProvider/>


<MudLayout>           
        <MudAppBar Elevation="1">
            <MudText Typo="Typo.h6">Mladim</MudText>
            <MudSpacer/>
            <UserLoginSettings/>
        </MudAppBar>

    <MudDrawer ClipMode="DrawerClipMode.Docked"  @bind-Open="@_drawerOpen"  Elevation="2" Variant="@DrawerVariant.Mini" OpenMiniOnHover="true">
        <MudNavMenu>
            <MudNavLink Class="pt-2" Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Description">Organizacija</MudNavLink>
            <MudNavLink Class="pt-2" Href="/projects" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.ImportContacts">Projekti</MudNavLink>
            <MudNavLink Class="pt-2" Href="/activities" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Event">Aktivnosti</MudNavLink>
        </MudNavMenu>       
    </MudDrawer>
    <MudMainContent>
        <MudContainer>
            @Body
        </MudContainer>             
    </MudMainContent>     
       
</MudLayout>
  



@code 
{
    bool _drawerOpen = false;

    MudTheme MyCustomTheme = new MudTheme()
        {
            Palette = new PaletteLight()
            {
                Primary = new MudColor("#4da456"),//Colors.  Colors.Blue.Default,
                Secondary = Colors.Green.Accent4,
                AppbarBackground = new MudColor("#4da456"),
                
            },                  
        };
   

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }


    protected override Task OnInitializedAsync()
    {
        return base.OnInitializedAsync();
    }
}

