@inherits LayoutComponentBase

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>


<MudLayout>           
        <MudAppBar Elevation="1">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
            <MudSpacer />
            <UserLoginSettings/>
        </MudAppBar>
        <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
            <MudDrawerHeader>
                <MudText Typo="Typo.h5" Class="mt-2">MamaLog</MudText>
            </MudDrawerHeader>
            <NavMenu />
        </MudDrawer>
        <CascadingValue Value="true">
            <MudMainContent>
                <MudContainer>
                    @Body
                </MudContainer>             
            </MudMainContent> 
        </CascadingValue>
</MudLayout>
  



@code 
{
    bool _drawerOpen = true;  

   // [Inject]
    //public IAppState AppState{ get; set; }

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }    
}

