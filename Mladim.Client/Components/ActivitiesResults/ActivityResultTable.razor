@using Mladim.Client.ViewModels.Survey;
@using Mladim.Domain.Enums;
@using Mladim.Domain.Extensions;
@using Mladim.Client.Components.Anketa;

<MudStack Spacing="4" >  
       <MudStack>       
         <MudStack Row Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
             <MudText Color="Color.Tertiary" Class="py-3" Typo="Typo.h2">@cogntigencyTableContext.CriterionSelector.SurveyTitle</MudText>
             <MudIconButton Icon="@Icons.Material.Filled.FileDownload" OnClick="@CsvExportCallback">Prenesi rezultate</MudIconButton>
         </MudStack>
         <MudStack Row>
            <MudSelect @bind-Value="cogntigencyTableContext.CriterionSelector" T="SurveyCriterionSelector" Label="Spremenljivka" Variant="Variant.Outlined" Converter="@criterionConverter">
                @foreach (var item in CriterionSelectors)
                {
                    <MudSelectItem Value="item">@item.Name</MudSelectItem>
                }
            </MudSelect>
            <MudSelect @bind-Value="cogntigencyTableContext.UnitSelector" T=UnitSelector Label="Enota prikaza" Variant="Variant.Outlined" Converter="@unitConverter">
                @foreach (var item in UnitSelectors)
                {
                    <MudSelectItem Value="item">@item.Type</MudSelectItem>
                }
            </MudSelect>
         </MudStack>
    </MudStack>
      
       
    @foreach (var response in SurveyResponsesGroupByQuestions)
    {
        switch (response.SurveyQuestion.Type)
        {
            case SurveyQuestionType.Boolean:
                <SurveyBoleanReponses Response="response as SurveyResponsesGroupedBySelectableQuestionVM" Context="cogntigencyTableContext" />
                break;
            case SurveyQuestionType.Rating:
                <SurveyRatingResponses Response="response as SurveyResponsesGroupedBySelectableQuestionVM" Context="cogntigencyTableContext" />
                break;
            case SurveyQuestionType.Multiple:
                <SurveyButtonGroupResponses Response="response as SurveyResponsesGroupedByMultipleSelectableQuestionVM" Context="cogntigencyTableContext" />
                break;
            case SurveyQuestionType.MultipleRepetitive:
                <SurveyRepetitiveButtonGroupResponses Response="response as SurveyResponsesGroupedByMultipleSelectableQuestionVM" Context="cogntigencyTableContext" />
                break;
            case SurveyQuestionType.Text:
                <SurveyTextResponses Response="response as SurveyTextResponsesGroupedByQuestion" />
                break;
            default:
                throw new NotImplementedException();
        }      
    }
</MudStack>


