


<MudForm @ref="@passwordForm" Model="@urlRegistration" Validation="@(urlRegistrationValidator.ValidateValue)" OnValidSubmit="OnValidSubmit">
    <MudGrid Justify="Justify.Center">
        <MudItem xs="12" md="6">
            <MudCard Elevation="4" Class="pa-2">
                @if (!string.IsNullOrWhiteSpace(_errorMessage))
                {
                    <MudAlert Severity="Severity.Error" Variant="Variant.Filled">@_errorMessage</MudAlert>
                }
                <MudCardHeader>
                    <MudText Typo="Typo.h6">Dobrodošli na vstopni strani Mladim</MudText>
                </MudCardHeader>

                <MudCardContent>
                    <MudTextField Label="Vnesi geslo"
                    @bind-Value="urlRegistration.Password" For="@(() => urlRegistration.Password)"
                                  InputType="@PasswordInput"
                                  Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon" OnAdornmentClick="ButtonPasswordClick" AdornmentAriaLabel="Pokaži geslo" />
                    
                    <MudTextField Label="Potrdi geslo" Class="mt-3"
                    @bind-Value="urlRegistration.ConfirmPassword" For="@(() =>  urlRegistration.ConfirmPassword)"
                                  InputType="@PasswordInput"
                                  Adornment="Adornment.End" AdornmentIcon="@PasswordInputIcon" OnAdornmentClick="ButtonPasswordClick" AdornmentAriaLabel="Pokaži geslo" />
                </MudCardContent>

                <MudCardActions>
                    <MudButton OnClick="@OnValidSubmit"
                               Variant="Variant.Filled"
                               Color="Color.Primary"
                               Disabled="_isBusy"
                               Class="ml-auto">

                        <MudStack Row="true" Spacing="4" AlignItems="AlignItems.Center">

                            <MudText Typo="Typo.h6">Registracija</MudText>
                            @if (_isBusy)
                            {
                                <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
                            }

                        </MudStack>
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudForm>



