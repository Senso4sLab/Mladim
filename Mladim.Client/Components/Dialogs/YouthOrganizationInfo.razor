@using System.Linq
@using Mladim.Client.Services.PopupService


<style>
    .font-size-header-mud-data-grid .mud-table-cell {
        font-size: 0.9rem;
        font-family: poppins;
        font-weight: 400;
        line-height: 1.0;
        letter-spacing: -0.024rem;
        color: #6e7191;
    }  

    .mud-dialog-content
    {
        padding: 0px !important;
       
    }


</style>

<MudDialog style="min-width:600px; min-height:300px; overflow:hidden;">
    <DialogContent>
        <MudStack Row>
            <MudStack  Class="pa-5">
                <MudStack Spacing="0">
                    <MudText Typo="Typo.h2">Fakulteta za socialno delo</MudText>
                    <MudText Typo="Typo.h2">Pilot Program 2023</MudText>
                </MudStack>

                <MudText Color="Color.Primary" Typo="Typo.h2">About this organization</MudText>
                <MudText Typo="Typo.h2">The University of Social Work plays a vital role in society by equipping individuals with the knowledge and skills necessary to address social issues, promote equality, and foster positive change in communities.</MudText>

            </MudStack>
            <MudImage Width="300" ObjectFit="ObjectFit.Cover" Src="youth/youth6.jpg"></MudImage>
        </MudStack>       
    </DialogContent>   
</MudDialog>

@code
{
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public YouthOrganization YouthOrganization { get; set; }
    
}


