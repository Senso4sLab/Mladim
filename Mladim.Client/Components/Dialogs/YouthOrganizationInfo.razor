@using System.Linq
@using Mladim.Client.Services.PopupService
@using Mladim.Client.ViewModels.Organization


<style>
    .font-size-header-mud-data-grid .mud-table-cell {
        font-size: 0.9rem;
        font-family: poppins;
        font-weight: 400;
        line-height: 1.0;
        letter-spacing: -0.024rem;
        color: #6e7191;
    }  

    .mud-dialog-content
    {
        padding: 0px !important;
       
    }

</style>

<MudDialog style="min-width:600px; min-height:300px; overflow:hidden; border-radius:10px;">
    <DialogContent>
      
        <MudPaper Class="d-flex align-stretch" Elevation="0">
            <MudStack Class="pa-5 d-flex flex-1" Spacing="4">               
                <MudImage Height="50" ObjectFit="ObjectFit.Contain" Src=@OrgAttributes.LogoUrl></MudImage>
                <MudText Typo="Typo.h1"><b>@OrgAttributes.Name</b></MudText>
                <MudStack Spacing="2">
                        <MudText Color="Color.Secondary" Typo="Typo.h2">Opis organizacije</MudText>
                        <MudText Typo="Typo.h2" Color="Color.Dark">@OrgAttributes.Description</MudText>
                </MudStack>              
            </MudStack>
            <MudImage Class="d-flex flex-1" ObjectFit="ObjectFit.Cover" Src=@OrgAttributes.BannerUrl></MudImage>
        </MudPaper>        
    </DialogContent>   
</MudDialog>

@code
{
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public OrganizationAttributesShortVM OrgAttributes { get; set; } = default!;

}


