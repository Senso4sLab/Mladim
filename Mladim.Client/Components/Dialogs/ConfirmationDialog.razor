

<MudDialog Style="min-width:600px; padding-bottom:10px;">
    <DialogContent>
        @Content
    </DialogContent>
    <DialogActions>
        <MudButton Class="px-5" Variant="Variant.Filled" Color="Color.Primary" OnClick="Submit">Da</MudButton>
        <MudButton Class="px-5 mr-5" Variant="Variant.Filled" Color="Color.Secondary" OnClick="Cancel">Prekliči</MudButton>
    </DialogActions>
</MudDialog>
@code 
{
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public string Content { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}