@using Mladim.Client.Extensions;
@using Mladim.Client.Validators;
@using Mladim.Domain.Enums;



<MudDialog Style="min-width:400px;">
    <TitleContent>
       <MudStack Row Justify="Justify.SpaceBetween">
           <MudText Typo="Typo.h6">@(staffMember.Id == 0 ? "Nov uporabnik" : "Uredi uporabnika")</MudText>
           <MudSwitch @bind-Checked="staffMember.IsActive" Color="Color.Primary">@(staffMember.IsActive ? "Aktiven" : "Neaktiven")</MudSwitch>
       </MudStack>
    </TitleContent>
    <DialogContent>
        <MudForm @ref="@staffMemberForm" Model="@staffMember" Validation="@(staffMemberValidator.ValidateValue)" OnValidSubmit="OnValidSubmit">
            <MudStack Spacing="4">
                <MudTextField @bind-Value="staffMember.Name" For="@(() => staffMember.Name)" Variant="Variant.Outlined" Label="Ime" />
                <MudTextField @bind-Value="staffMember.Surname" For="@(() => staffMember.Surname)" Variant="Variant.Outlined" Label="Priimek" />

                <MudSelect @bind-Value="staffMember.Gender" For="@(() => staffMember.Gender)" T="Gender" ToStringFunc="@(gender => gender.GetDisplayAttributeString())" Variant="Variant.Outlined" Label="Spol" AnchorOrigin="Origin.BottomCenter">
                    @foreach (var gender in Enum.GetValues<Gender>())
                    {
                        <MudSelectItem Value="gender">@gender.GetDisplayAttributeString()</MudSelectItem>
                    }
                </MudSelect>

                <MudNumericField @bind-Value="staffMember.YearOfBirth" For="@(() => staffMember.YearOfBirth)" Label="Leto rojstva" Variant="Variant.Outlined" Min="@(DateTime.Now.Year - 100)" Max="@DateTime.Now.Year"/>
                <MudTextField @bind-Value="staffMember.Email" For="@(() => staffMember.Email)" Variant="Variant.Outlined" Label="Email" />
                <MudSwitch @bind-Checked="staffMember.Claim" Color="Color.Primary" >@($"Vloga uporabnika v organizaciji: {GetRoleName(staffMember.Claim)}")</MudSwitch>
            </MudStack>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Secondary" OnClick="Cancel">Prekliči</MudButton>
        <MudButton Variant="Variant.Filled" OnClick="OnValidSubmitAsync" Color="Color.Primary">@(staffMember.Id == 0 ? "Dodaj" : "Spremeni")</MudButton>
    </DialogActions>
</MudDialog>


@code
    {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set;}

    [Parameter]
    public StaffMemberVM staffMember { get; set; }

    private MudForm? staffMemberForm;
    private StaffMemberValidator staffMemberValidator = new StaffMemberValidator();


    private async Task OnValidSubmitAsync()
    {
        await staffMemberForm.Validate();
        //TODO
        if (staffMemberForm.IsValid)
            MudDialog.Close(DialogResult.Ok(staffMember));       
    }


    private string GetRoleName(ApplicationClaim role) => role switch
    {
        ApplicationClaim.Worker => "Delavec",
        ApplicationClaim.Manager => "Menedžer",
        _ => string.Empty,
    };


    void Cancel() =>
        MudDialog.Cancel();
    

}
