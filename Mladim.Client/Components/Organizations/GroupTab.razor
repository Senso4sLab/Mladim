
<style>
    .font-size-header-mud-data-grid .mud-table-cell {
        font-size: 0.9rem;
        font-family: poppins;
        font-weight: 400;
        line-height: 1.0;
        letter-spacing: -0.024rem;
        color: #6e7191;
    }
</style>
<MudStack Class="py-10" Spacing="4">
    <MudStack Row="true" Justify="Justify.SpaceBetween">
        <MudText Typo="Typo.h4" Color="Color.Tertiary">Izberi skupino</MudText>
        <MudSwitch T=bool Style="font-family:poppins; font-size:1rem; font-weight:600; line-height:1.3;" Checked="IsStaffGroup" CheckedChanged="@GroupSwitchChangedAsync" Color="Color.Primary">@(IsStaffGroup ? "Uporabniki" :"Udeleženci")</MudSwitch>
    </MudStack>
    <MudStack Row="true" Justify="Justify.SpaceBetween">
        <MudButton OnClick="OnCreateGroupAsync" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.Add" Color="Color.Primary">Ustvari skupino</MudButton>
            <MudSwitch T=bool Checked="ShowActiveGroups" CheckedChanged="@ShowActiveGroupChangedAsync" Color="Color.Primary">@(ShowActiveGroups ? "Aktivne" : "Neaktivne")</MudSwitch>
    </MudStack>
        <MudDataGrid Items="Groups" ReadOnly="false" EditMode="DataGridEditMode.Form"
                 Bordered="true" Dense="true" EditTrigger="DataGridEditTrigger.Manual"
                 HeaderClass="font-size-header-mud-data-grid" RowStyleFunc="RowStyleFunc">
        <Columns>
           <PropertyColumn Property="x => x.FullName" Title="Ime" />
           <PropertyColumn Property="x => x.Description" Title="Opis" />               
           <TemplateColumn CellClass="d-flex justify-end">
               <CellTemplate>
                   <MudIconButton Size="@Size.Small" Icon="@Icons.Material.Outlined.Edit" @onclick="@(() => UpdateGroupAsync(context.Item))" />
               </CellTemplate>
           </TemplateColumn>
        </Columns>
        <PagerContent>
            <MudDataGridPager T="GroupVM" RowsPerPageString="Št. vrstic na stran" />
        </PagerContent>
    </MudDataGrid>
 </MudStack>


